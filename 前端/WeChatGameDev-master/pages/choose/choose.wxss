  font: 40rpx;
  color: rgb(0, 255, 255);
}
#blue{
  width: 50%;
  border: 3rpx solid #00c8ff;
}
#green{
  width: 50%;
  border: 3rpx solid #00ffc8;
}
#submit{
  color: rgb(0, 255, 255);
