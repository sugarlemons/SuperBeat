}

.container{
  height: 100%;
  width: 100%;
}

.choices{
  position: relative;
  width: 96%;
  top: 5%;
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.empty{
  width: 2%;
}

.title{
  font-size: 50rpx;
}
.context{
  font-size: 35rpx;
}
